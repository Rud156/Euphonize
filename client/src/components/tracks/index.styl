.overlay-content {
  transition: 0.7s cubic-bezier(0.165, 0.84, 0.44, 1) all;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.padding-21 {
  padding: 21px;
}

.color-hover {
  transition-duration: 0.7s;
}

.color-hover:hover {
  color: coral;
}

.overlay-content:hover {
  background-color: rgba(0, 0, 0, 0.7);
}

.max-width {
  max-width: 400px;
}
