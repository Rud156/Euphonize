.overlay-content {
  transition: 0.7s cubic-bezier(0.165, 0.84, 0.44, 1) all;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.padding-21 {
  padding: 21px;
}

.padding-5 {
  padding: 5px;
}

.track-name {
  display: inline-block;
  font-size: 20px;
}

.track-image {
  width: 50px;
  height: 50px;
  margin: 0 7px 7px 0;
}

.color-hover {
  transition-duration: 0.7s;
}

.color-hover:hover {
  color: coral;
}

.overlay-content:hover {
  background-color: rgba(0, 0, 0, 0.7);
}

.max-width {
  max-width: 400px;
}
