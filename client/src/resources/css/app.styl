body {
  background: linear-gradient(to top, rgb(255, 100, 124), rgb(254, 161, 125));
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: auto;
  color: white !important;
}

a {
  text-decoration: none !important;
}

.text-shadow {
  text-shadow: 1px 1px 7px #444;
}

.white-text {
  color: white;
}

.cursor-pointer {
  cursor: pointer;
}

.fixed-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.category-header {
  color: white;
  margin: 0 auto;
  margin-bottom: 21px;
  width: 35%;
  border-bottom: solid 2px white;
  font-weight: 400;
  text-align: center;
  padding-top: 100px;
}

.sub-category-headers {
  text-align: left;
  padding-left: 21px;
  margin-bottom: 7px;
  margin-top: 21px;
}

.navbar {
  background: rgb(254, 189, 164) !important;
  z-index: 2;
}

.uk-offcanvas-bar {
  background-color: #f8f8fff7 !important;
}

.black-text {
  color: black !important;
}

.active-link {
  color: lightcoral !important;
}

.animated-input {
  background: transparent;
  border: none;
  border-bottom: 1px solid white;
  transition-duration: 0.3s;
}

.animated-input:focus {
  background: #ffffff;
  border: 1px solid #e5e5e5;
}

